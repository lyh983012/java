	public void getstockName() {
	}
	public void setstockName() {
	}
	public Deal parseString( String deal) 
	{
		return null;
		
	}
	public String toPlainText() {
		return this.dealType+" "+this.time+" "+this.amount+"$ "+this.stockName+" "+this.stockNumber+" "+this.category;
		
	}
